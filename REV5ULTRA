        display.printf("Force: %.2f N", liveData.currentForce_N);
    } else {
        display.print("Force: Not Ready");
    }
    
    // Direction indicators with larger visual elements
    display.setTextSize(1);
    display.setCursor(4, 75);
    display.print("TOWARD <--");
